"use client";

import {
  ChatBubble,
  ChatBubbleAvatar,
  ChatBubbleMessage,
} from "@/components/ui/chat/chat-bubble";
import { ChatMessageList } from "@/components/ui/chat/chat-message-list";
import { Button } from "@/components/ui/button";
import { Send } from "lucide-react";
import { useChat } from "ai/react";
import { useEffect, useRef, useState } from "react";
import Markdown from "react-markdown";
import remarkGfm from "remark-gfm";
import CodeDisplayBlock from "@/components/chatbot/code-display-block";
import { api } from "@/trpc/react";
import { cuidGenerate } from "@/lib/utils";
import { z } from 'zod'
import { useForm } from "react-hook-form";
import { zodResolver } from "@hookform/resolvers/zod";
import { FormControl, FormField, FormItem, Form } from "../ui/form";
import { Textarea } from "../ui/textarea";

export default function ChatBot() {
  const gemini = api.chat.text.useMutation();
  const messagesRef = useRef<HTMLDivElement>(null);
  const [isGenerating, setIsGenerating] = useState(false);
  const id = cuidGenerate();
  const { messages, setMessages, isLoading } = useChat({
    onResponse(response) {
      if (response) setIsGenerating(false);
    },
    onError(error) {
      if (error) setIsGenerating(false);
    },
  });

  useEffect(() => {
    if (messagesRef.current) messagesRef.current.scrollTop = messagesRef.current.scrollHeight;
  }, [messages]);


  const inputSchema = z.object({ prompt: z.string() });
  const form = useForm<z.infer<typeof inputSchema>>({
    resolver: zodResolver(inputSchema),
    defaultValues: { prompt: "" }
  })



  function onSubmit(values: z.infer<typeof inputSchema>) {
    setIsGenerating(true);
    setMessages([
      ...messages,
      { id: id.next().value, role: `user`, content: values.prompt },
    ]);

    gemini.mutate(values.prompt);
    const geminiOutput = gemini.data;

    if (!geminiOutput) return

    setMessages([
      ...messages,
      { id: id.next().value, role: `assistant`, content: geminiOutput },
    ]);

    setIsGenerating(false)
  };

  return (
    <div className="flex h-full w-full flex-col">
      <header className="py-20 p-4">
        <h1 className="text-xl font-semibold">Chat about the VPC âœ¨</h1>
        <p>Ask anything about the VPC for our AI to answer</p>
      </header>
      <ChatMessageList className="bg-muted/25" ref={messagesRef}>
        <ChatBubble variant="received">
          <ChatBubbleAvatar src="" fallback="ðŸ¤–" />
          <ChatBubbleMessage>How can I help you?</ChatBubbleMessage>
        </ChatBubble>
        {messages?.map((message, index) => (
          <ChatBubble
            key={index}
            variant={message.role == "user" ? "sent" : "received"}
          >
            <ChatBubbleMessage
              variant={message.role == "user" ? "sent" : "received"}
            >
              {message.content
                .split("```")
                .map((part: string, index: number) => {
                  if (index % 2 === 0) {
                    return (
                      <Markdown key={index} remarkPlugins={[remarkGfm]}>
                        {part}
                      </Markdown>
                    );
                  } else {
                    return (
                      <pre className="pt-2" key={index}>
                        <CodeDisplayBlock code={part} lang="" />
                      </pre>
                    );
                  }
                })}
            </ChatBubbleMessage>
          </ChatBubble>
        ))}
        {isGenerating && (
          <ChatBubble variant="received">
            <ChatBubbleAvatar src="" fallback="ðŸ¤–" />
            <ChatBubbleMessage isLoading />
          </ChatBubble>
        )}
      </ChatMessageList>
      <Form {...form}>
        <form onSubmit={form.handleSubmit(onSubmit)}>
          <FormField
            control={form.control}
            name='prompt'
            render={({ field }) => (
              <FormItem>
                <FormControl>
                  <Textarea {...field} />
                </FormControl>
              </FormItem>
            )} />
          <Button
            // className="absolute right-2 top-1/2 -translate-y-1/2 transform"
            type="submit"
            size="icon"
            disabled={isLoading || isGenerating}
          >
            <Send className="size-4" />
          </Button>
        </form>
      </Form>
    </div>
  );
}
